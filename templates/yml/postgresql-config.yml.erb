<% require 'uri' %>
integrations:
<% config_entries = ENV['PSQL_URLS'].split(',') %>
<% config_entries.each do |entry| %>
  <% fragments = entry.split('|') %>
  <% uri = URI.parse(fragments[0]) %>
  - name: nri-postgresql
    env:
      USERNAME: <%= uri.user %>
      PASSWORD: <%= uri.password %>
      HOSTNAME: <%= uri.host %>
      DATABASE: <%= uri.path[1..-1] %>  <%# Remove the leading slash from the database name %>
      PORT: "<%= uri.port %>"
      ENABLE_SSL: "true"
      TRUST_SERVER_CERTIFICATE: "true"
      COLLECTION_LIST: '["<%= uri.path[1..-1] %>"]'
      CUSTOM_METRICS_CONFIG: /etc/newrelic-infra/integrations.d/postgresql-custom-query.yml
    interval: <%= ENV['NEW_RELIC_COLLECTION_INTERVAL'] || 30s %>
    labels:
      instance: <%= fragments[1] %>
      env: <%= ENV['NEW_RELIC_ENV_LABEL'] || 'production' %>
      role: postgresql
    inventory_source: config/postgresql
<% end %>
